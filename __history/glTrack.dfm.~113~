      'FROM parbrize_auto pp  '
      'JOIN automobile a ON a.a_id = pp.a_id '
      ' JOIN sectia s ON pp.sectia_id = s.id_sectia '
      ' JOIN celula c ON s.id_celula = c.id_celula  '
